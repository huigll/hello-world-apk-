<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#111111">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="In-App Keyboard Demo"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Text" />

        <Button
            android:id="@+id/btn_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Number" />

        <Button
            android:id="@+id/btn_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password" />

        <Button
            android:id="@+id/btn_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Phone" />

        <Button
            android:id="@+id/btn_autocomplete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AutoComplete" />

        <Button
            android:id="@+id/btn_webview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WebView" />

        <Button
            android:id="@+id/btn_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hide" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#CCCCCC"
        android:text="Current: Text" />

    <FrameLayout
        android:id="@+id/input_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp">

        <EditText
            android:id="@+id/et_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Text (supports ZH Pinyin candidate bar)"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:backgroundTint="#888888" />

        <EditText
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Number"
            android:imeOptions="actionDone"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:backgroundTint="#888888"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:backgroundTint="#888888"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone"
            android:imeOptions="actionDone"
            android:inputType="phone"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:backgroundTint="#888888"
            android:visibility="gone" />

        <AutoCompleteTextView
            android:id="@+id/actv_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="AutoCompleteTextView (tap to focus, use keyboard)"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#888888"
            android:backgroundTint="#888888"
            android:visibility="gone" />

        <WebView
            android:id="@+id/webview_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <com.carbit.inappkeyboard.keyboard.InAppKeyboardPanelView
        android:id="@+id/keyboard_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#222222"
        android:paddingTop="4dp"
        android:paddingBottom="4dp" />

</LinearLayout>
